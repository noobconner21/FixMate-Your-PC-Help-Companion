<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    tools:context=".StartActivity">



    <TextView
        android:id="@+id/helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/helloText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a problem with your PC?"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsreg"
        android:textColor="#000000"
        android:layout_below="@+id/helloText"
        android:layout_marginLeft="20dp"
        />


    <ImageView
        android:id="@+id/startImg"
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:src="@drawable/start_img_01"
        android:layout_below="@+id/helloText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="Start Image 1"/>


    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/sign_in"
        android:fontFamily="@font/poppinsreg"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:layout_below="@id/startImg"
        android:layout_marginTop="74dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppinsreg"
        android:text="@string/sign_up"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:layout_below="@id/buttonSignIn"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/textFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FixMate a Solution by SSLABLK"
        android:textSize="10sp"
        android:fontFamily="@font/poppinsreg"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

        



</RelativeLayout>